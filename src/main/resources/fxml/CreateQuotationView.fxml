                           <GridPane.margin>
                              <Insets left="10.0" right="10.0" />
                           </GridPane.margin>
                        </JFXButton>
                        <Label text="Enter your BEST price (per 1 piece)" GridPane.halignment="RIGHT">
                           <GridPane.margin>
                              <Insets right="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label text="Total price of this quotation" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets right="10.0" />
                           </GridPane.margin>
                        </Label>
                        <JFXTextField fx:id="bestPriceTextField" disable="true" GridPane.columnIndex="1" />
                        <Label fx:id="totalPriceLabel" text="0 Baht." GridPane.columnIndex="1" GridPane.rowIndex="1" />
